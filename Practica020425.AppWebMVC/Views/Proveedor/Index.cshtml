@model IEnumerable<Practica020425.AppWebMVC.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create" class="btn btn-primary" style="margin-bottom: 10px;">Crear</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th style="width: 250px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td style="text-align: center;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" style="margin-right: 5px;">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" style="margin-right: 5px;">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        /* Degradado rojo de fondo */
        background: linear-gradient(to bottom,#FFFFFF, #FF1000); /* Rojo a rojo oscuro */
       
       
    }

    .table-striped {
        background-color: #f9f9f9;
    }

    .table-bordered th,
    .table-bordered td {
        border: 1px solid #dee2e6;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.2rem;
    }

   

    .tabla-flotante {
        background-color: white; /* Fondo blanco para la tabla */
        padding: 20px; /* Espacio interno alrededor de la tabla */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Sombra para dar efecto de elevación */
        box-shadow: 10px;
    }

    table {
        width: 100%; /* La tabla ocupa el 100% del contenedor */
        border-collapse: collapse; /* Colapsa los bordes de la tabla */
    }

    th, td {
        border: 1px solid #ddd; /* Bordes para las celdas */
        padding: 8px; /* Espacio interno para las celdas */
        text-align: left; /* Alineación del texto a la izquierda */
    }

    th {
        background-color: #f2f2f2; /* Fondo gris claro para los encabezados */
    }
</style>